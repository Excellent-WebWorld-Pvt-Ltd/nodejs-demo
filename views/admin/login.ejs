<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Excellent Web World::Node Demo</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="Node Demo" name="description" />
        <meta content="Node Demo" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="assets/images/favicon.ico">

        <!-- App css -->
        <link href="/admin/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="/admin/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
        <link href="/admin/assets/css/app.min.css" rel="stylesheet" type="text/css" />

    </head>

    <body class="authentication-bg authentication-bg-pattern">

        <div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-pattern">

                            <div class="card-body p-4">
                                
                                <div class="text-center w-75 m-auto">
                                    <a href="#">
                                        <span><img src="/admin/assets/images/eww.png" alt="" height="22"></span>
                                    </a>
                                    <p class="text-muted mb-4 mt-3">Enter your email address and password to access admin panel.</p>
                                </div>

                                <% if (typeof error !== 'undefined') { %>
                                    <center><p style="color:red;"><%= error %></p></center>
                                <% } %>

                                <form action="/admin/login" method="post">

                                    <div class="form-group mb-3">
                                        <label for="emailaddress">Email address</label>
                                        <input class="form-control" type="email" id="emailaddress" required="" name="email" value="<%= oldInput ? oldInput.email : '' %>" placeholder="Enter your email">
                                        <% if (errors && errors.email) { %>
                                            <p style="color:red;"><%= errors.email %></p>
                                        <% } %>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="password">Password</label>
                                        <input class="form-control" type="password" required="" id="password" name="password" placeholder="Enter your password">
                                         <% if (errors && errors.password) { %>
                                            <p style="color:red;"><%= errors.password %></p>
                                        <% } %>
                                    </div>

                                    <div class="form-group mb-0 text-center">
                                        <button class="btn btn-primary btn-block" type="submit"> Log In </button>
                                    </div>

                                </form>
                            </div> <!-- end card-body -->
                        </div>
                        <!-- end card -->
                        

                    </div> <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end page -->


        <footer class="footer footer-alt">
            2015 - 2025 &copy; EWW
        </footer>

        <!-- Vendor js -->
        <script src="/admin/assets/js/vendor.min.js"></script>

        <!-- App js -->
        <script src="/admin/assets/js/app.min.js"></script>
        
    </body>
</html>