                        <% } %>
                    </span>
                </a>

                <!-- item-->
                <a href="javascript:void(0);" class="dropdown-item notify-item">
                    <i class="fe-user"></i>
                    <span><%= t('My Account') %></span>
                </a>

                <div class="dropdown-divider"></div>

                <!-- item-->
                <a href="/admin/logout" class="dropdown-item notify-item">
                    <i class="fe-log-out"></i>
                    <span><%= t('Logout') %></span>
                </a>

            </div>
        </li>
