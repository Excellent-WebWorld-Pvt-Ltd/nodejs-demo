<%- include('../../partials/header') %>

<link href="assets/libs/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css" />
<link href="assets/libs/datatables/responsive.bootstrap4.css" rel="stylesheet" type="text/css" />
<link href="assets/libs/datatables/buttons.bootstrap4.css" rel="stylesheet" type="text/css" />
<link href="assets/libs/datatables/select.bootstrap4.css" rel="stylesheet" type="text/css" />
    <body>

        <!-- Begin page -->
        <div id="wrapper">

            <%- include('../../partials/topbar-light') %>

            <%- include('../../partials/left-sidebar') %>


            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                                            <li class="breadcrumb-item"><a href="javascript: void(0);"><%= title %></a></li>
                                            <li class="breadcrumb-item active">List</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title"><%= title %></h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 

                        <div class="row">
                            <div class="col-12">
                             <% if (locals.success_msg && locals.success_msg.length > 0) { %>
                                 <div class="alert alert-success"><%= locals.success_msg[0] %></div>
                            <% } %>

                            <% if (locals.error_msg && locals.error_msg.length > 0) { %>
                                <div class="alert alert-danger"><%= locals.error_msg[0] %></div>
                            <% } %>
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Users</h4>

                                        <table id="dynamic-datatable" class="table dt-responsive nowrap">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Role</th>
                                                    <th>Created At</th>
                                                    <th>Action</th>
                                                    
                                                </tr>
                                            </thead>
                                        
                                        </table>

                                    </div> <!-- end card body-->
                                </div> <!-- end card -->
                            </div><!-- end col-->
                        </div>
                        
                    </div> <!-- container -->

                </div> <!-- content -->

                
                <%- include('../../partials/footer') %>
            </div>

        </div>
        <!-- END wrapper -->

        <!-- Vendor js -->
        <script src="assets/js/vendor.min.js"></script>

        <!-- third party js -->
        <script src="assets/libs/datatables/jquery.dataTables.min.js"></script>
        <script src="assets/libs/datatables/dataTables.bootstrap4.js"></script>
        <script src="assets/libs/datatables/dataTables.responsive.min.js"></script>
        <script src="assets/libs/datatables/responsive.bootstrap4.min.js"></script>
        <script src="assets/libs/datatables/dataTables.buttons.min.js"></script>
        <script src="assets/libs/datatables/buttons.bootstrap4.min.js"></script>
        <script src="assets/libs/datatables/buttons.html5.min.js"></script>
        <script src="assets/libs/datatables/buttons.flash.min.js"></script>
        <script src="assets/libs/datatables/buttons.print.min.js"></script>
        <script src="assets/libs/datatables/dataTables.keyTable.min.js"></script>
        <script src="assets/libs/datatables/dataTables.select.min.js"></script>
        <script src="assets/libs/pdfmake/pdfmake.min.js"></script>
        <script src="assets/libs/pdfmake/vfs_fonts.js"></script>
        <!-- third party js ends -->

        <!-- Datatables init -->
        <script src="assets/js/pages/datatables.init.js"></script>

        <!-- App js -->
        <script src="assets/js/app.min.js"></script>
        <script src="assets/js/custom.js"></script>

         <script>

            $(document).ready(function () {
              $('#dynamic-datatable').DataTable({
                processing: true,
                serverSide: true,
                ajax: '/admin/getUsers',
                columns: [
                  { data: 'id' },
                  { data: 'name' },
                  { data: 'email' },
                  { data: 'role' },
                  { data: 'createdAt'},
                  { 
                        data: null, 
                        orderable: false, 
                        searchable: false,
                        render: function (data, type, row) {
                            var action = '';
                            action = `<a href="/admin/user/edit/${row.id}" class="btn btn-sm btn-primary">Edit</a>&nbsp;&nbsp;`;
                            action += `<button class="btn btn-sm btn-danger" onclick="deleteRecord('User', ${row.id})">Delete</button>&nbsp;&nbsp;`;
                            if(row.status == '1')
                            {
                                action += `<button class="btn btn-sm btn-success" onclick="changeStatus('User', ${row.id},'0')">Active</button>&nbsp;&nbsp;`;
                            }
                            else
                            {
                                action += `<button class="btn btn-sm btn-danger" onclick="changeStatus('User', ${row.id}, '1')">Inactive</button>&nbsp;&nbsp;`;    
                            }
                                
                            return action;
                        }
                    }
                ]
              });
            });
          </script>
        
    </body>
</html>